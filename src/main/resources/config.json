{
	"scripts": [
		{
			"name": "Trello",
			"source": "https://raw.githubusercontent.com/redhat-cop/ninja-points/v1.2/trello-stats.py -s ${LAST_RUN:yyyy-MM-dd}",
			"type": "perl"
		},
		{
			"name": "Github",
			"source": "https://raw.githubusercontent.com/redhat-cop/ninja-points/v1.2/github-stats.py -s ${LAST_RUN:yyyy-MM-dd}",
			"type": "perl"
		}
	],
	"options": {
		"login.enabled": "false",
		"root": "${configLocation}",
		"_graphs-proxy": "http://localhost:8083/ninja-roxy",
		"heartbeat.intervalInSeconds": "86400000",
		"events.max": "1000000",
		"thresholds": "0:ZERO,5:BLUE,20:GREY,40:RED,75:BLACK",
		"ldap.enabled": "true",
		"_users.ldap.provider": "ldap://server.example.com:123",
		"users.ldap.baseDN": "ou=users,dc=redhat,dc=com",
		"users.ldap.searchDN": "(&(objectclass=Person)(%s=%s))"
	},
	"values": {
		"lastRun2": "2018-10-01T00:00:00"
	}
}
